{
    "extends": "@tsconfig/svelte/tsconfig.json",
    "compilerOptions": {
        "baseUrl": ".",
        "inlineSources": true,
        "resolveJsonModule": true,
        "module": "ESNext",
        "target": "ES6",
        "allowJs": true,
        "noImplicitAny": true,
        "moduleResolution": "node",
        "importHelpers": true,
        "isolatedModules": true,
        "strictNullChecks": true,
        "verbatimModuleSyntax": false,
        "strict": true,
        "noUncheckedIndexedAccess": true,
        "types": [
            "jest",
            "node",
            "svelte",
        ],
        "lib": [
            "DOM",
            "ES5",
            "ES6",
            "ES7"
        ],
        "paths": {
            "@std": [
                "src/std"
            ]
        },
        "plugins": [
            {
                "name": "@unsplash/ts-namespace-import-plugin",
                "namespaces": {
                    "O": {
                        "importPath": "fp-ts/Option"
                    },
                    "NEA": {
                        "importPath": "fp-ts/NonEmptyArray"
                    },
                    "E": {
                        "importPath": "fp-ts/Either"
                    },
                    "A": {
                        "importPath": "fp-ts/Array"
                    },
                    "T": {
                        "importPath": "fp-ts/Task"
                    },
                    "TE": {
                        "importPath": "fp-ts/TaskEither"
                    },
                    "R": {
                        "importPath": "fp-ts/Record"
                    },
                    "RA": {
                        "importPath": "fp-ts/ReadonlyArray"
                    },
                }
            }
        ]
    },
    "include": [
        "src/**/*"
    ],
}